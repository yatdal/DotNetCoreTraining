@{
    Layout = "_Layout_LoginPage";
}
@model UserCredential
<form method="post" asp-controller="User" asp-action="Index">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
        <input asp-for="Username" class="form-control" placeholder="Username">
        <label  asp-for="Username">Username</label>
    </div>
    <div class="form-floating">
        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
        <label asp-for="Password">Password</label>
    </div>

    <div class="row">
        <button class="w-50 btn btn-lg btn-primary d-inline" asp-controller="User" asp-action="Index">Sign in</button>
        <button class="w-50 btn btn-lg btn-success d-inline" asp-controller="User" asp-action="ForgotPassword">Forgot Password</button>
    </div>

</form>
<hr />
<h2>Create new user</h2>
<form method="post" asp-controller="User" asp-action="New">
    <div class="form-floating">
        @*<input asp-for="NewUsername" class="form-control" placeholder="Username">
        <label asp-for="NewUsername">Username</label>*@
        <input asp-for="NewUsername" class="form-control" placeholder="Username">
        <label asp-for="NewUsername">Username</label>
    </div>
    <div class="form-floating">
        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Password">
        <label asp-for="NewPassword">New Password</label>
    </div>
    <div class="form-floating">
        <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="Repeat Password">
        <label asp-for="RepeatPassword">Repeat Password</label>
    </div>
    <button class="w-50 btn btn-lg btn-danger">New User</button>
</form>
